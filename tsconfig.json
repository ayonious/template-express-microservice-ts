{
  "compilerOptions": {
    "allowJs": true,
    "outDir": "dist",
    "target": "ES2015",
    "noImplicitAny": true,
    "strictNullChecks": true,
    "module": "commonjs",
    "declaration": true,
    "lib": ["ES2015", "dom"],
    "strict": true,
    "types": ["jest", "node"],
    "esModuleInterop": true,
    "moduleResolution": "node"
  },
  "include": ["src/**/*", "src/index.ts"]
}
